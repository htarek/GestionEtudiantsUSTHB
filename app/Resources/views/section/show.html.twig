{% extends 'templates/admin/template.html.twig' %}

{% block body %}
    <h1>Section</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ section.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ section.name }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ section.annee }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ section.email }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if section.dateFin %}{{ section.dateFin|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('Section_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('Section_edit', { 'id': section.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
