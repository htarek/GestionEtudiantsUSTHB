<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}  | DOTILY</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/plugins/bootstrap/css/bootstrap.min.css') }}">
        <!-- DataTables CSS -->
        <link href="{{ asset('assets/plugins/datatables-plugins/dataTables.bootstrap.css') }}" rel="stylesheet">
        <!-- DataTables Responsive CSS -->
        <link href="{{ asset('assets/plugins/datatables-responsive/dataTables.responsive.css') }}" rel="stylesheet">

        <!-- CSS bootstrap-tags -->
        <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap-tags/bootstrap-tags-input/bootstrap-tagsinput.css') }}">
        <link rel="stylesheet" href="{{ asset('assets/plugins/bootstrap-tags/css/tags.css') }}">
        <!-- CSS bootstrap-tags -->
    </head>
    <body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">DOTILY</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% if ( app.user == false ) %}
                            <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                            <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        {% endif %}
                        {% if ( app.user ) %}
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                <span class="glyphicon glyphicon-user"></span>
                                Logout
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container" style="margin-top: 60px;">
            <div class="row">
                {% block body %}{% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
        <script src="{{ asset('assets/plugins/jquery/jquery.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/plugins/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('assets/plugins/datatables/js/jquery.dataTables.js') }}"></script>
        <script src="{{ asset('assets/plugins/datatables-plugins/dataTables.bootstrap.js') }}"></script>
        <script src="{{ asset('assets/plugins/datatables-responsive/dataTables.responsive.js') }}"></script>
        <script type="text/javascript">
            $(document).ready(function() 
            {
                $('#dataTables-example').DataTable(
                {
                    responsive: true
                });
            });
        </script>
        <!-- JS bootstrap-tags -->
        <script src="{{ asset('assets/plugins/bootstrap-tags/bootstrap-tags-input/bootstrap-tagsinput.min.js') }}"></script>
        <script src="{{ asset('assets/plugins/bootstrap-tags/typeahead/typeahead.js') }}"></script>
        <script src="{{ asset('assets/plugins/bootstrap-tags/js/tags.js') }}"></script>
        <!-- JS bootstrap-tags -->
    </body>
</html>
